---
import Illustrations from "./Illustrations.astro";
import Notes from "./Notes.astro";
import Projects from "./Projects.astro";
import { border_radius } from "../utils/constants";
---

<section class="sectionWrapper">
    <div class="tab-container">
        <input
            type="radio"
            name="work_tabs"
            id="tab-projects"
            role="tab"
            class="tab-radio"
            checked
        />
        <input
            type="radio"
            name="work_tabs"
            id="tab-notes"
            role="tab"
            class="tab-radio"
        />
        <input
            type="radio"
            name="work_tabs"
            id="tab-illustrations"
            role="tab"
            class="tab-radio"
        />

        <div role="tablist" class="tab-list">
            <div class="tab-slider bg-accent"></div>
            <label for="tab-projects" class="tab-button">Projects</label>
            <label for="tab-notes" class="tab-button">Notes</label>
            <label for="tab-illustrations" class="tab-button">Sketches</label>
        </div>

        <div class="tab-panels">
            <div class="tab-panel" data-tab="projects">
                <Projects />
            </div>
            <div class="tab-panel" data-tab="notes">
                <Notes />
            </div>
            <div class="tab-panel" data-tab="illustrations">
                <Illustrations />
            </div>
        </div>
    </div>
</section>

<style define:vars={{ border_radius }}>
    .tab-container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .tab-list {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        position: relative;
        background: rgba(100, 66, 214, 0.04);
        border-radius: var(--border_radius);
        padding: 0.5rem;
        gap: 0.5rem;
        isolation: isolate;
    }

    .tab-slider {
        position: absolute;
        top: 0.5rem;
        left: 0.5rem;
        width: calc(33.333% - 0.67rem);
        height: calc(100% - 1rem);
        border-radius: var(--border_radius);
        border: 2px solid rgba(54, 67, 255, 1);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1;
        opacity: 0.5;
    }

    #tab-notes:checked ~ .tab-list .tab-slider {
        transform: translateX(calc(100% + 0.5rem));
    }

    #tab-illustrations:checked ~ .tab-list .tab-slider {
        transform: translateX(calc(200% + 1rem));
    }

    .tab-radio {
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }

    .tab-button {
        padding: 1.25rem 1rem;
        font-size: 1rem;
        font-weight: 400;
        text-align: center;
        border-radius: var(--border_radius);
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: transparent;
        border: none;
        position: relative;
        z-index: 2;
        opacity: 0.7;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .tab-button:hover {
        background: rgba(100, 66, 214, 0.05);
        opacity: 0.7;
    }

    #tab-projects:checked ~ .tab-list .tab-button:nth-child(2) {
        font-weight: 500;
        opacity: 1;
    }

    #tab-notes:checked ~ .tab-list .tab-button:nth-child(3) {
        font-weight: 500;
        opacity: 1;
    }

    #tab-illustrations:checked ~ .tab-list .tab-button:nth-child(4) {
        font-weight: 500;
        opacity: 1;
    }

    .tab-panels {
        position: relative;
    }

    .tab-panel {
        display: none;
    }

    #tab-projects:checked ~ .tab-panels .tab-panel[data-tab="projects"],
    #tab-notes:checked ~ .tab-panels .tab-panel[data-tab="notes"],
    #tab-illustrations:checked
        ~ .tab-panels
        .tab-panel[data-tab="illustrations"] {
        display: block;
    }

    @media (min-width: 768px) {
        .tab-button {
            font-size: 1.125rem;
            padding: 1.5rem 2.5rem;
        }
    }
</style>
