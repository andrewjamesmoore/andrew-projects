---
import Projects from "./Projects.astro";
import Notes from "./Notes.astro";
---

<section class="sectionWrapper">
    <div class="tab-container">
        <input
            type="radio"
            name="work_tabs"
            id="tab-projects"
            role="tab"
            class="tab-radio"
            checked
        />
        <input
            type="radio"
            name="work_tabs"
            id="tab-notes"
            role="tab"
            class="tab-radio"
        />

        <div role="tablist" class="tab-list">
            <div class="tab-slider bg-accent"></div>
            <label for="tab-projects" class="tab-button">Projects</label>
            <label for="tab-notes" class="tab-button">Notes</label>
        </div>

        <div class="tab-panels">
            <div class="tab-panel" data-tab="projects">
                <Projects />
            </div>
            <div class="tab-panel" data-tab="notes">
                <Notes />
            </div>
        </div>
    </div>
</section>

<style>
    .tab-container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .tab-list {
        display: grid;
        grid-template-columns: 1fr 1fr;
        position: relative;
        border-radius: 9999px;
        padding: 0.5rem;
        gap: 0.5rem;
        isolation: isolate;
    }

    .tab-slider {
        position: absolute;
        top: 0.5rem;
        left: 0.5rem;
        width: calc(50% - 0.75rem);
        height: calc(100% - 1rem);
        border-radius: 9999px;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1;
        opacity: 0.15;
    }

    #tab-notes:checked ~ .tab-list .tab-slider {
        transform: translateX(calc(100% + 1rem));
    }

    .tab-radio {
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }

    .tab-button {
        padding: 1.25rem 2rem;
        font-size: 1rem;
        font-weight: 400;
        text-align: center;
        border-radius: 9999px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: transparent;
        border: none;
        position: relative;
        z-index: 2;
        opacity: 0.5;
    }

    .tab-button:hover {
        background: rgba(100, 66, 214, 0.05);
        opacity: 0.7;
    }

    #tab-projects:checked ~ .tab-list .tab-button:nth-child(2) {
        font-weight: 500;
        opacity: 1;
    }

    #tab-notes:checked ~ .tab-list .tab-button:nth-child(3) {
        font-weight: 500;
        opacity: 1;
    }

    .tab-panels {
        position: relative;
    }

    .tab-panel {
        display: none;
    }

    #tab-projects:checked ~ .tab-panels .tab-panel[data-tab="projects"],
    #tab-notes:checked ~ .tab-panels .tab-panel[data-tab="notes"] {
        display: block;
    }

    @media (min-width: 768px) {
        .tab-button {
            font-size: 1.125rem;
            padding: 1.5rem 2.5rem;
        }
    }
</style>
