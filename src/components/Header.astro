---
import { andrew } from "../utils/constants";
import ThemeDice from "./ThemeDice.astro";
---

<nav>
    <section>
        <div class="title-group">
            <h5 class="name">{andrew.title}</h5>
            <p class="subtitle">{andrew.description}</p>
        </div>
    </section>
    <aside>
        <div class="nav-links">
            <a
                href="https://github.com/andrewjamesmoore"
                target="_blank"
                class="glitch-link"
                data-text="github"
            >
                Github
            </a>
            <a
                href="mailto:hello@andrewjamesmoore.com"
                target="_blank"
                class="glitch-link"
                data-text="email"
            >
                Email
            </a>
            <ThemeDice />
        </div>
    </aside>
</nav>

<style>
    nav {
        display: flex;
        justify-content: space-between;
        align-items: start;
        padding-bottom: 3.5rem;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }

    .title-group {
        display: flex;
        flex-direction: column;
    }

    .name {
        font-weight: 700;
    }

    .subtitle {
        font-size: 0.75rem;
        opacity: 0.8;
    }

    .nav-links {
        display: flex;
        align-items: flex-end;
        gap: 1rem;
    }

    .glitch-link {
        font-size: 0.7rem;
        text-transform: uppercase;
        text-decoration: underline;
        opacity: 0.8;
        position: relative;
        letter-spacing: 0.05em;
        transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .glitch-link:hover {
        opacity: 1;
    }

    .glitch-link::before,
    .glitch-link::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
    }

    .glitch-link:hover::before {
        animation: glitch-before 1.4s ease-out;
        color: #ff00ff;
        z-index: -1;
    }

    .glitch-link:hover::after {
        animation: glitch-after 1.4s ease-out;
        color: #00ffff;
        z-index: -1;
    }
</style>
