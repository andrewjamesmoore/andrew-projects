---
import ExternalLink from "@astropub/icons/ExternalLink";
import FileText from "@astropub/icons/FileText";
import { icon_size } from "../utils/constants";
const {
  title = "string",
  description = "string",
  url = "string",
  date = "string",
} = Astro.props;
---

<article
  class='flex flex-col lg:flex-row justify-between items-start lg:items-center border-b border-base-300 pb-6 w-full'
>
  <div class='flex flex-col gap-2 w-full lg:w-1/2 pb-4 lg:p-0'>
    <p class='text-xs text-base-content opacity-50'>{date}</p>
    <div class='flex gap-2 items-center'>
      <p class='text-md font-bold'>{title}</p>
      <FileText width={icon_size} height={icon_size} />
    </div>
    <p class='text-sm text-base-content opacity-80'>
      {description}
    </p>
  </div>
  <a href={url} target='_blank'>
    <button class='btn btn-outline rounded-none font-normal'>
      <ExternalLink width={icon_size} height={icon_size} />
      read notes
    </button></a
  >
</article>
