---
import FileText from "@astropub/icons/FileText";
import { icon_size, border_radius } from "../utils/constants";
const {
    title = "string",
    description = "string",
    contentPath = "string",
    date = "string",
} = Astro.props;

const modalId = contentPath.replace(/\//g, '-');
---

<div class="card bg-base-100 border border-base-300 lg:card-side h-auto lg:h-48" style={`border-radius: ${border_radius};`}>
    <div class="card-body flex-1">
        <div class="flex items-center justify-between gap-2">
            <span class="badge badge-ghost badge-sm">{date}</span>
        </div>
        <div class="flex items-center gap-2">
            <h2 class="card-title text-base">{title}</h2>
            <FileText width={icon_size} height={icon_size} class="opacity-50" />
        </div>
        <p class="text-sm opacity-80 flex-1">{description}</p>
        <div class="card-actions justify-end mt-auto">
            <button
                onclick={`document.getElementById('modal-${modalId}').showModal()`}
                class="btn btn-outline btn-sm gap-2"
                aria-label="Read notes"
                title="Read notes"
            >
                <FileText width={icon_size} height={icon_size} />
                read notes
            </button>
        </div>
    </div>
</div>
